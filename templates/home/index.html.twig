{% extends 'layout/base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}

	{# {{dump(news)}} #}
	<div class="site-section">
		<div class="container">
			<div class="row mb-5">
				<div class="col-12">
					<h2>Recent Posts</h2>
				</div>
			</div>
			<div class="row">
				{% for new in news %}


					<div class="col-lg-4 mb-4">
						<div class="entry2">
							<a href="single.html"> 
                             {# imagge selon le bundle vichy iuploader #}
                            <img class="img-fluid rounded" src="{{vich_uploader_asset(new, 'imageFile') }}"></a>
							<div class="excerpt">
								<span class="post-category text-white bg-secondary mb-3">Politics</span>

								<h2>
									<a href="single.html"> {{new.title }} </a>
								</h2>
								<div class="post-meta align-items-center text-left clearfix">
									<figure class="author-figure mb-0 mr-3 float-left">
                                   
                                   
                                    </figure>
									<span class="d-inline-block mt-1">By
										<a href="#">Carrol Atkinson</a>
									</span>
									<span>&nbsp;-&nbsp; July 19, 2019</span>
								</div>

								<p> {{new.description | slice(0, 100)}}......... <p>
									<a href="#">Read More</a>
								</p>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
			<div class="row text-center pt-5 border-top">
				<div class="col-md-12">
					<div class="custom-pagination">
						<span>1</span>
						<a href="#">2</a>
						<a href="#">3</a>
						<a href="#">4</a>
						<span>...</span>
						<a href="#">15</a>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
